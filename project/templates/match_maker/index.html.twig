{% extends 'base.html.twig' %}

{% block title %}Hello MatchMakerController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>TEST MATCH MAKER CONTROLLER !</h1>
    <h2>Liste de joueurs</h1>
    <ul style="list-style:none;">
        {% for joueur in joueurs %}
            <li>{{ joueur }}</li>
        {% endfor %}
    </ul>

    <h2>Liste des matchs</h1>
    <ul style="list-style:none;">
        {% for match in matchs %}
            <li>{{ match }}</li>
        {% endfor %}
    </ul>

    <h2>RÃ©sultats des matchs</h1>
    <ul style="list-style:none;">
        {% for resultat in resultats %}
            <li>{{ resultat }}</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
